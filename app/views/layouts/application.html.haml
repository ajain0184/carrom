!!! 5
%html
  %head
    %title Carrom #{yield :title}
    = stylesheet_link_tag 'reset', 'pong', 'jquery.autocomplete'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.autocomplete', 'jquery.tabs'
    = favicon_link_tag
    = csrf_meta_tag

  %body
    #page
      %header
        %h1 Carrom
        %nav
          = link_to_with_current "Rankings", root_path
          = link_to_with_current "Matches", matches_path
          = link_to_with_current "Distribution", distribution_path

      = render 'shared/flash_messages'
      = yield
      %footer
        = link_to "source code", "https://github.com/scarr2508/pongleaf"
        = link_to "elo rating system", "http://en.wikipedia.org/wiki/Elo_rating_system"
